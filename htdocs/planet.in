body {
	border-right: 1px solid black;
	margin-right: 200px;

	padding-left: 20px;
	padding-right: 20px;
}

h1 {
	margin-top: 0px;
	padding-top: 20px;

	font-family: "Bitstream Vera Sans", sans-serif;
	font-weight: normal;
	letter-spacing: -2px;
	text-transform: lowercase;
	text-align: right;

	color: grey;
}

h2 {
	font-family: "Bitstream Vera Sans", sans-serif;
	font-weight: normal;
	color: #200080;
        border-bottom: 1px black dotted; 
	margin-left: -20px;
}

h3 {
	font-family: "Bitstream Vera Sans", sans-serif;
	font-weight: normal;
	background-color: #a0c0ff;
	border: 1px solid #5080b0;
	padding: 4px;
}

h3 a {
	text-decoration: none !important;
	color: inherit !important;
}

h3 a:hover {
	text-decoration: none !important;
	color: inherit !important;

}

h4 {
	font-family: "Bitstream Vera Sans", sans-serif;
	font-weight: bold;
}

h4 a {
	text-decoration: none !important;
	color: inherit;
}

h4 a:hover {
	text-decoration: none !important;
	color: inherit;
}

img.face {
	float: right;
	margin-top: -3em;
}

.tags {
        text-align: right;
}
.entry {
	margin-bottom: 2em;
}

.date {
	font-family: "Bitstream Vera Sans", sans-serif;
	color: black;
	border-top: 1px solid #5080b0;
	padding: 4px;
    text-align: right;
}

.entry .date a {
	text-decoration: none;
	color: inherit;
}

.entry pre {
	overflow:	auto;
	background:	rgb(230,230,230);
	border:		solid;
	border-width:	thin;
	padding: 5px  10px;
}

.sidebar {
	position: absolute;
	top: 0px;
	right: 0px;
	width: 200px;

	margin-left: 0px;
	margin-right: 0px;
	padding-right: 0px;

	padding-top: 20px;
	padding-left: 0px;

	font-family: "Bitstream Vera Sans", sans-serif;
	font-size: 85%;
}

.sidebar h2 {
	font-size: 110%;
	font-weight: bold;
	color: black;

	padding-left: 5px;
	margin-left: 0px;
}

.sidebar ul {
	padding-left: 2em;
	margin-left: 0px;

	list-style-type: square;
}

.sidebar ul li:hover {
	color: grey;
}

.sidebar p {
	border-top: 1px solid grey;
	margin-top: 30px;
	padding-top: 10px;

	padding-left: 5px;
}

a {
	text-decoration: none;
}
a:hover {
	text-decoration: underline !important;
	color: blue !important;
}
